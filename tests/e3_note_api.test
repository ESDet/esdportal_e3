<?php
class E3NoteTestCase extends DrupalUnitTestCase {
	
	public static function getInfo() {
	  // Note: getInfo() strings should not be translated.
	  return array(
	    'name' => 'E3 Note unit tests',
	    'description' => 'Test functions found in the e3_note_api section in the esdportal_e3 module',
	    'group' => 'e3_note',
	  );
	}

	function testE3NoteAccess() {

		$result = e3_note_access('create', $e3_note, $account = NULL, $entity_type = NULL);
		$message = 'Some parameters should return TRUE or FALSE or should EQUAL()';
		$this->assertTrue($result, $message);

		$result = e3_note_access('view', $e3_note, $account = NULL, $entity_type = NULL);
		$message = 'Some parameters should return TRUE or FALSE or should EQUAL()';
		$this->assertTrue($result, $message);

		$result = e3_note_access('edit', $e3_note, $account = NULL, $entity_type = NULL);
		$message = 'Some parameters should return TRUE or FALSE or should EQUAL()';
		$this->assertTrue($result, $message);

	}

	function testE3NoteLoad() {

		$result = e3_note_load($id, $reset = FALSE);
		$message = 'Some parameters should return TRUE or FALSE or should EQUAL()';
		$this->assertTrue($result, $message);

	}

	function testE3NoteLoadMultiple() {

		$result = e3_note_load_multiple($ids = array(), $conditions = array(), $reset = FALSE);
		$message = 'Some parameters should return TRUE or FALSE or should EQUAL()';
		$this->assertTrue($result, $message);
		
	}

}
